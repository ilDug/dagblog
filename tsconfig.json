{
  "compileOnSave": false,
  "compilerOptions": {
        "outDir": "./tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "es2015",
        "target": "es5",
        "typeRoots": [
          "node_modules/@types"
        ],
        "lib": [
          "es2016",
          "dom"
        ]
    },
    "exclude": [
        "node_modules"
    ]

}
